bandhig("    First name: " + firstName)

// Truncate text with ellipsis (simplified)
door longText = "Soplang waa luqad cusub oo waxtar leh"
door truncated = longText.jar(0, 20) + "..."

bandhig("  Truncate text:")
bandhig("    Original: " + longText)
bandhig("    Truncated: " + truncated)  // Should be "Soplang waa luqad cu..."

